{
  "info": {
    "name": "Book Review Platform API",
    "description": "Complete API collection for the MERN Book Review Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/books?page=1&limit=5&search=&genre=&sortBy=createdAt&sortOrder=desc",
              "host": ["{{base_url}}"],
              "path": ["api", "books"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "5"
                },
                {
                  "key": "search",
                  "value": ""
                },
                {
                  "key": "genre",
                  "value": ""
                },
                {
                  "key": "sortBy",
                  "value": "createdAt"
                },
                {
                  "key": "sortOrder",
                  "value": "desc"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Single Book",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/books/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "books", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "book_id_here"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"The Great Gatsby\",\n  \"author\": \"F. Scott Fitzgerald\",\n  \"description\": \"A classic American novel set in the Jazz Age\",\n  \"genre\": \"Fiction\",\n  \"publishedYear\": 1925\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/books",
              "host": ["{{base_url}}"],
              "path": ["api", "books"]
            }
          },
          "response": []
        },
        {
          "name": "Update Book",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Book Title\",\n  \"author\": \"Updated Author\",\n  \"description\": \"Updated description\",\n  \"genre\": \"Fiction\",\n  \"publishedYear\": 2023\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/books/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "books", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "book_id_here"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Book",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/books/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "books", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "book_id_here"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Get Reviews for Book",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/reviews/book/:bookId",
              "host": ["{{base_url}}"],
              "path": ["api", "reviews", "book", ":bookId"],
              "variable": [
                {
                  "key": "bookId",
                  "value": "book_id_here"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": \"book_id_here\",\n  \"rating\": 5,\n  \"reviewText\": \"Excellent book! Highly recommended.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reviews",
              "host": ["{{base_url}}"],
              "path": ["api", "reviews"]
            }
          },
          "response": []
        },
        {
          "name": "Update Review",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 4,\n  \"reviewText\": \"Updated review text\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reviews/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "reviews", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "review_id_here"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Review",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reviews/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "reviews", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "review_id_here"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get User Reviews",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/reviews/user/:userId",
              "host": ["{{base_url}}"],
              "path": ["api", "reviews", "user", ":userId"],
              "variable": [
                {
                  "key": "userId",
                  "value": "user_id_here"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}